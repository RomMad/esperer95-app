{% extends 'base.html.twig' %}

{% form_theme form "bootstrap_4_layout.html.twig" %}

{% block title %}Les suivis
{% endblock %}

{% block stylesheets %}

<link href="{{ asset("css/table.css") }}" rel="stylesheet" />

{% endblock %}

{% block body %}

<section class="my-0">

    <div class="container">
        <h1 class="h2 mb-4">Les suivis</h1>
    </div>

    <div class="jumbotron py-3">
        {{ form_start(form) }}
        <div class="form-inline justify-content-md-center align-items-end">
            <div class="form-group col-auto my-1 px-1">
                {{ form_row(form.lastname) }}
            </div>
            <div class="form-group col-auto my-1 px-1 ">
                {{ form_row(form.firstname) }}
            </div>
            <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                <div class="">
                    <i class="fas fa-calendar-alt mx-1 text-black-50 d-none d-sm-block" data-toggle="tooltip"
                        data-placement="bottom" title="Date de naissance"></i>
                </div>
                {{ form_row(form.birthdate) }}
            </div>
            <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                {{ form_row(form.familyTypology) }}
            </div>
            <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                {{ form_row(form.nbPeople) }}
            </div>
            <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                <button type="submit" id="search" class="btn btn-primary shadow">
                    <i class="fas fa-search" data-placement="bottom" title="Rechercher"></i>
                </button>
                <a href="{{ path("list_groups_people") }}" class="btn btn-secondary ml-2 shadow">
                    <i class="fas fa-eraser" data-placement="bottom" title="Effacer"></i>
                </a>
            </div>
            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>

    <div class="container">

        <div class="row align-items-baseline">
            <div class="col-md-4 count align-middle">
                <p class="align-middle">Résultat :
                    {{ role_people.getTotalItemCount | number_format(0,'', ' ')  }}
                    personnes.</p>
            </div>
            <div class="col-md-8">
                <div class="navigation">{{ knp_pagination_render(role_people) }}</div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover shadow">
                <thead class="bg-dark">
                    <tr>
                        <th scope="col" class="align-middle th-width-20px"></th>
                        <th scope="col" class="align-middle th-width-150px">
                            {{ knp_pagination_sortable(role_people, "Nom et prénom", "p.lastname") }}
                        </th>
                        <th scope="col" class="align-middle th-date">
                            {{ knp_pagination_sortable(role_people, "Date de naissance", "p.birthdate") }}
                        </th>
                        <th scope="col" class="align-middle th-width-140px">
                            {{ knp_pagination_sortable(role_people, "Typologie familiale", "g.familyTypology") }}
                        </th>
                        <th scope="col" class="align-middle th-width-80px text-light">
                            Date de début de suivi
                        </th>
                        <th scope="col" class="align-middle th-width-80px text-light">
                            Date de fin de suivi
                        </th>
                        <th scope="col" class="align-middle th-width-80px text-light">
                            Statut du suivi
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for person in role_people %}
                    <tr>
                        <th scope="row">
                            <a href="{% if person.groupPeople %}{{ path('group_people_show', {'id':person.groupPeople.id}) }} {% endif %}"
                                class="btn btn-primary shadow" data-placement="bottom" title="Voir la fiche du groupe">
                                <span class="fas fa-users"></span>
                            </a>
                        </th>
                        <td>
                            <a href="{% if person.groupPeople %}{{ path('group_people_show', {'id':person.groupPeople.id}) }} {% endif %}"
                                class="text-primary">
                                <span
                                    class="text-uppercase font-weight-bold">{{ person.person.lastname }}</span><br />{{ person.person.firstname }}</a>
                        </td>
                        <td>
                            {% if person.person.birthdate %}
                            {{ person.person.birthdate | date("d/m/Y") }}<br />
                            ({{ person.person.age }}
                            {% if person.person.age > 1 %} ans{% elseif person.person.age > 0 %} an{% endif %})
                            {% endif %}
                        </td>
                        <td>
                            {{ person.groupPeople.getFamilyTypologyType }}<br />
                            {% if person.groupPeople.nbPeople > 1 %}
                            {{ person.groupPeople.nbPeople }} personnes
                            {% endif %}
                        </td>
                        <td>
                            {% for socialSupport in person.groupPeople.socialSupports %}
                            {{ socialSupport.startDate | date("d/m/Y") }}<br />
                            {% endfor %}
                        </td>
                        <td>
                            {% for socialSupport in person.groupPeople.socialSupports %}
                            {{ socialSupport.endDate | date("d/m/Y") }}<br />
                            {% endfor %}
                        </td>
                        <td>
                            {% for socialSupport in person.groupPeople.socialSupports %}
                            {{ socialSupport.getStatusType  }}<br />
                            {% endfor %}
                        </td>
                    </tr>
                </tbody>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="navigation">
            {{ knp_pagination_render(role_people) }}
        </div>
</section>
</div>{% endblock %}