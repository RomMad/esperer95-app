{% extends "base.html.twig" %}

{% form_theme form "form/bootstrap_4_horizontal.html.twig" %}

{% block title %}Suivi social | Esperer95-app{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

<div class="container">

  {% set support = form.vars.value %}

  <h1 class="h2 mb-3">Suivi social</h1>

  {{ form_start(form) }}

  {% include "model/msgFlash.html.twig" %}
  <div id="js-msg-flash-content"></div>

  <section class="{% if form.supportPers.children|length == 1 %}d-none{% endif %}">
    <h2 class="h4 my-4">Personnes rattachées au suivi social</h2>
    <div class="row">
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table table-striped table-hover text-dark shadow-sm">
            <thead>
              <tr>
                <th scope="col" class="align-middle th-w-20"></th>
                <th scope="col" class="align-middle th-w-150">Prénom et Nom</th>
                <th scope="col" class="align-middle th-w-100">Date de début</th>
                <th scope="col" class="align-middle th-w-100">Date de fin</th>
                <th scope="col" class="align-middle th-w-100">Statut</th>
                <th scope="col" class="align-middle th-w-150">Commentaire</th>
              </tr>
            </thead>
            <tbody>
              {% for form_support_pers in form.supportPers.children %}
              {% set person = form_support_pers.vars.data.person %}
              <tr>
                <pre>
                {{ dump(form_support_pers) }}
              </pre>
                <th scope="row">
                  <a href="{{ path("group_person_show", {"id":group_people.id, "person_id":person.id, "slug":person.slug}) }}"
                    class="btn btn-{{ theme_color }} shadow" data-placement="bottom"
                    title="Modifier les informations de la personne">
                    <span class="fas fa-user-edit"></span>
                  </a>
                </th>
                <td class="px-1 align-middle">{{ person.firstname }} {{ person.lastname }}</td>
                {# <td class="px-1">{{ form_widget(form_support_pers.startDate) }}</td>
                <td class="px-1">{{ form_widget(form_support_pers.endDate) }}</td>
                <td class="px-1">{{ form_widget(form_support_pers.status) }}</td>
                <td class="px-1">{{ form_widget(form_support_pers.comment) }}</td> #}
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-12">
        <div class="mb-4 float-right">
          {% if edit_mode %}
          <button type="submit" id="update" name="update" class="btn btn-{{ theme_color }} shadow"
            data-url="{{ path('update_person', {'id':support.id}) }}">Mettre à jour</button>
          <input type="submit" id="send" name="send" class="btn btn-secondary shadow" value="Enregistrer">
          {% else %}
          <input type="submit" id="send" name="send" id="send" class="btn btn-{{ theme_color }} shadow"
            value="Enregistrer">
          {% endif %}
        </div>
      </div>
    </div>
  </section>

  {{ form_row(form._token) }}
  {{ form_end(form, {"render_rest": false}) }}

</div>
{% endblock %}