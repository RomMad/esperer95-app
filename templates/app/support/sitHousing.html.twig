{% extends "model/collapseCard.html.twig" %}

{% set id = "sit-housing" %}

{% block collapse_card_title %}Situation au regard du logement{% endblock %}

{% block collapse_card_body %}

<div class="form-group row">
    <div class="col-md-6">{{ form_row(form.sitHousing.housingStatus) }}</div>
    <div class="col-md-6">{{ form_row(form.sitHousing.dls) }}</div>
    <div class="col-md-6 js-dls d-block">{{ form_row(form.sitHousing.dlsId) }}</div>
    <div class="col-md-6 js-dls d-block">{{ form_row(form.sitHousing.housingWishes) }}</div>
    <div class="col-md-6 js-dls d-block">{{ form_row(form.sitHousing.citiesWishes) }}</div>
    <div class="col-md-6 js-dls d-block">{{ form_row(form.sitHousing.specificities) }}</div>
    <div class="col-md-6 js-dls d-block">{{ form_row(form.sitHousing.syplo) }}</div>
    <div class="col-md-6 js-syplo d-block">{{ form_row(form.sitHousing.syploId) }}</div>
    <div class="col-md-6 js-syplo d-block">{{ form_row(form.sitHousing.syploDate) }}</div>
</div>
<div class="form-group row">
    <div class="col-md-6">{{ form_row(form.sitHousing.daloCommission) }}</div>
    <div class="col-md-6 js-daloCommission d-block">{{ form_row(form.sitHousing.daloRecordDate) }}</div>
    <div class="col-md-6 js-daloCommission d-block">{{ form_row(form.sitHousing.requalifiedDalo) }}</div>
    <div class="col-md-6 js-daloCommission d-block">{{ form_row(form.sitHousing.decisionDate) }}</div>
</div>
<div class="js-0_sitProf_profStatus js-1_sitProf_profStatus d-block">
    <div class="form-group row">
        <div class="col-md-6">{{ form_row(form.sitHousing.hsgActionEligibility) }}</div>
        <div class="col-md-6 js-hsgActionEligibility d-block">{{ form_row(form.sitHousing.hsgActionRecord) }}</div>
        <div class="col-md-6 js-hsgActionEligibility d-block">{{ form_row(form.sitHousing.hsgActionDate) }}</div>
        <div class="col-md-6 js-hsgActionEligibility d-block">{{ form_row(form.sitHousing.hsgActionDept) }}</div>
        <div class="col-md-6 js-hsgActionEligibility d-block">{{ form_row(form.sitHousing.hsgActionRecordId) }}</div>
    </div>
</div>
<div class="js-housingStatus d-block">
    <div class="form-group row">
        <div class="col-md-6">{{ form_row(form.sitHousing.expulsionInProgress) }}</div>
        <div class="col-md-6 js-expulsionInProgress d-block">{{ form_row(form.sitHousing.publicForce) }}</div>
        <div class="col-md-6 js-expulsionInProgress d-block">{{ form_row(form.sitHousing.publicForceDate) }}</div>
        <div class="col-md-6 js-expulsionInProgress d-block">{{ form_row(form.sitHousing.expulsionComment) }}</div>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-6">{{ form_row(form.sitHousing.housingExperience) }}</div>
    <div class="col-md-6 js-housingExperience d-block">{{ form_row(form.sitHousing.housingExpeComment) }}</div>
</div>
<div class="js-housingStatus d-block">
    <div class="form-group row ">
        <div class="col-md-6">
            <div class="row">
                <div class="col-form-label col-sm-4">Aides liées au logement</div>
                <div class="col-sm-8">
                    <select id="js-hsgHelps" name="hsgHelps" class="form-control">
                        <option class="default" value="">-- Ajouter --</option>
                        <option value="1">FSL</option>
                        <option value="2">Eligibité aide à l'installation FSL</option>
                        <option value="3">Eligibililité CAF</option>
                        <option value="4">Autre(s) aide(s)</option>
                    </select>
                </div>
            </div>
        </div>
        <div id="js-hsgHelps-1" class="col-md-2 js-hsgHelps d-block">{{ form_widget(form.sitHousing.fsl) }}</div>
        <div id="js-hsgHelps-2" class="col-md-2 js-hsgHelps d-block">{{ form_widget(form.sitHousing.fslEligibility) }}
        </div>
        <div id="js-hsgHelps-3" class="col-md-2 js-hsgHelps d-block">{{ form_widget(form.sitHousing.cafEligibility) }}
        </div>
        <div id="js-hsgHelps-4" class="col-md-2 js-hsgHelps d-block">{{ form_widget(form.sitHousing.otherHelps) }}</div>
        <div id="js-hsgHelps-5" class="col-md-6 js-otherHelps d-block">{{ form_row(form.sitHousing.hepsPrecision) }}
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-6">{{ form_row(form.sitHousing.domiciliation) }}</div>
    <div class="col-md-6 js-domiciliation d-block">{{ form_row(form.sitHousing.domiciliationAddress) }}</div>
    <div class="col-md-6 js-domiciliation d-block">{{ form_row(form.sitHousing.domiciliationCity) }}</div>
    <div class="col-md-6 js-domiciliation d-block">{{ form_row(form.sitHousing.domiciliationDept) }}</div>
</div>
<div class="form-group row">
    <div class="col-md-12">
        {{ form_widget(form.sitHousing.commentSitHousing) }}
    </div>
</div>
{% endblock %}