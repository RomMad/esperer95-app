{% extends "model/collapseCard.html.twig" %}

{% set id = "sit-housing" %}

{% block card_title %}Logement/hébergement{% endblock %}

{% block card_body %}

<div class="form-group row">
    <div class="col-md-6">{{ form_row(form.evalHousingGroup.housingStatus) }}</div>
    <div class="col-md-6">{{ form_row(form.evalHousingGroup.dls) }}</div>
    <div class="col-md-6 js-dls d-block">{{ form_row(form.evalHousingGroup.dlsId) }}</div>
    <div class="col-md-6 js-dls d-block">{{ form_row(form.evalHousingGroup.housingWishes) }}</div>
    <div class="col-md-6 js-dls d-block">{{ form_row(form.evalHousingGroup.citiesWishes) }}</div>
    <div class="col-md-6 js-dls d-block">{{ form_row(form.evalHousingGroup.specificities) }}</div>
    <div class="col-md-6 js-dls d-block">{{ form_row(form.evalHousingGroup.syplo) }}</div>
    <div class="col-md-6 js-syplo d-block">{{ form_row(form.evalHousingGroup.syploId) }}</div>
    <div class="col-md-6 js-syplo d-block">{{ form_row(form.evalHousingGroup.syploDate) }}</div>
</div>
<div class="form-group row">
    <div class="col-md-6">{{ form_row(form.evalHousingGroup.daloCommission) }}</div>
    <div class="col-md-6 js-daloCommission d-block">{{ form_row(form.evalHousingGroup.daloRecordDate) }}</div>
    <div class="col-md-6 js-daloCommission d-block">{{ form_row(form.evalHousingGroup.requalifiedDalo) }}</div>
    <div class="col-md-6 js-daloCommission d-block">{{ form_row(form.evalHousingGroup.decisionDate) }}</div>
</div>
<div class="js-0_evalProfPerson_profStatus js-1_evalProfPerson_profStatus d-block">
    <div class="form-group row">
        <div class="col-md-6">{{ form_row(form.evalHousingGroup.hsgActionEligibility) }}</div>
        <div class="col-md-6 js-hsgActionEligibility d-block">{{ form_row(form.evalHousingGroup.hsgActionRecord) }}</div>
        <div class="col-md-6 js-hsgActionEligibility d-block">{{ form_row(form.evalHousingGroup.hsgActionDate) }}</div>
        <div class="col-md-6 js-hsgActionEligibility d-block">{{ form_row(form.evalHousingGroup.hsgActionDept) }}</div>
        <div class="col-md-6 js-hsgActionEligibility d-block">{{ form_row(form.evalHousingGroup.hsgActionRecordId) }}</div>
    </div>
</div>
<div class="js-housingStatus d-block">
    <div class="form-group row">
        <div class="col-md-6">{{ form_row(form.evalHousingGroup.expulsionInProgress) }}</div>
        <div class="col-md-6 js-expulsionInProgress d-block">{{ form_row(form.evalHousingGroup.publicForce) }}</div>
        <div class="col-md-6 js-expulsionInProgress d-block">{{ form_row(form.evalHousingGroup.publicForceDate) }}</div>
        <div class="col-md-6 js-expulsionInProgress d-block">{{ form_row(form.evalHousingGroup.expulsionComment) }}</div>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-6">{{ form_row(form.evalHousingGroup.housingExperience) }}</div>
    <div class="col-md-6 js-housingExperience d-block">{{ form_row(form.evalHousingGroup.housingExpeComment) }}</div>
</div>
<div class="js-housingStatus d-block">
    <div class="form-group row ">
        <div class="col-md-6">
            <div class="row">
                <div class="col-form-label col-sm-4">Aides liées au logement</div>
                <div class="col-sm-8">
                    <select id="js-hsgHelps" name="hsgHelps" class="form-control">
                        <option class="default" value="">-- Ajouter --</option>
                        <option value="1">FSL</option>
                        <option value="2">Eligibité aide à l'installation FSL</option>
                        <option value="3">Eligibililité CAF</option>
                        <option value="4">Autre(s) aide(s)</option>
                    </select>
                </div>
            </div>
        </div>
        <div id="js-hsgHelps-1" class="col-md-2 js-hsgHelps d-block">{{ form_widget(form.evalHousingGroup.fsl) }}</div>
        <div id="js-hsgHelps-2" class="col-md-2 js-hsgHelps d-block">{{ form_widget(form.evalHousingGroup.fslEligibility) }}
        </div>
        <div id="js-hsgHelps-3" class="col-md-2 js-hsgHelps d-block">{{ form_widget(form.evalHousingGroup.cafEligibility) }}
        </div>
        <div id="js-hsgHelps-4" class="col-md-2 js-hsgHelps d-block">{{ form_widget(form.evalHousingGroup.otherHelps) }}</div>
        <div id="js-hsgHelps-5" class="col-md-6 js-otherHelps d-block">{{ form_row(form.evalHousingGroup.hepsPrecision) }}
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-6">{{ form_row(form.evalHousingGroup.domiciliation) }}</div>
    <div class="col-md-6 js-domiciliation d-block">{{ form_row(form.evalHousingGroup.domiciliationAddress) }}</div>
    <div class="col-md-6 js-domiciliation d-block">{{ form_row(form.evalHousingGroup.domiciliationCity) }}</div>
    <div class="col-md-6 js-domiciliation d-block">{{ form_row(form.evalHousingGroup.domiciliationDept) }}</div>
</div>
<div class="form-group row">
    <div class="col-md-12">
        {{ form_widget(form.evalHousingGroup.commentEvalHousing) }}
    </div>
</div>
{% endblock %}