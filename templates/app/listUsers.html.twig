{% extends "base.html.twig" %}

{% form_theme form "bootstrap_4_layout.html.twig" %}

{% block title %}Utilisateurs | Esperer95-app{% endblock %}

{% block stylesheets %}
{# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/css/select2.min.css"> #}
{# <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-theme/0.1.0-beta.10/select2-bootstrap.min.css"> #}
{% endblock %}

{% block body %}

<section class="my-0">
    <div class="container">
        {% include "model/msgFlash.html.twig" %}
        <h1 class="h2 mb-4">Utilisateurs</h1>
    </div>

    <div class="container-fluid p-0">
        <div id="form-search" class="jumbotron py-3">
            {{ form_start(form) }}
            <div class="form-inline justify-content-md-center align-items-end">
                <div class="form-service col-auto my-1 px-1 ">
                    {{ form_row(form.lastname) }}
                </div>
                <div class="form-service col-auto my-1 px-1">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="form-service col-auto my-1 px-1 d-inline-flex align-items-baseline">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text d-none d-sm-block" data-toggle="tooltip"
                                data-placement="bottom" title="Téléphone">
                                <i class=" fas fa-phone text-black-50"></i>
                            </div>
                        </div>
                        {{ form_row(form.phone) }}
                    </div>
                </div>
                <div class="form-service col-auto my-1 px-1 ">
                    {{ form_row(form.service) }}
                </div>
                <div class="form-service col-auto my-1 px-1 ">
                    {{ form_row(form.pole) }}
                </div>
                <div class="form-service col-auto my-1 px-1">
                    <button type="submit" id="search" class="btn btn-{{ theme_color }} shadow"><i
                            class="fas fa-search"></i></button>
                    <button id="js-btn-clear" class="btn btn-secondary ml-2 shadow"><i
                            class="fas fa-eraser"></i></button>
                </div>
                {{ form_end(form, {"render_rest": false}) }}
            </div>
        </div>
    </div>

    {% if users %}
    <div class="container">
        <div class="row align-items-baseline">
            <div class="col-md-4 count align-middle">
                <p class="align-middle">Résultat : {{ users.getTotalItemCount | number_format(0,'', ' ')}}
                    utilisateurs.</p>
            </div>
            <div class="col-md-8">
                <div class="navigation">{{ knp_pagination_render(users) }}</div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover text-dark shadow-sm">
                <thead>
                    <tr>
                        <th scope="col" class="align-middle th-w-20"></th>
                        <th scope="col" class="align-middle th-w-120">
                            {{ knp_pagination_sortable(users, "Nom", "u.lastname") }}
                        </th>
                        <th scope="col" class="align-middle th-w-120">
                            {{ knp_pagination_sortable(users, "Prénom", "u.firstname") }}
                        </th>
                        <th scope="col" class="align-middle th-w-120">
                            Fonction
                        </th>
                        <th scope="col" class="align-middle th-w-120">
                            Téléphone
                        </th>
                        <th scope="col" class="align-middle th-w-150">
                            Email
                        </th>
                        <th scope="col" class="align-middle th-w-150">
                            Service
                        </th>
                        <th scope="col" class="align-middle th-w-150">
                            Pôle
                        </th>
                    </tr>
                </thead>

                <tbody>

                    {% for user in users %}
                    <tr>
                        <th scope="row">
                            {% if service_users is defined %}
                            <a href="{{ path('service_add_user', {'id':service_users.id, 'user_id': user.id}) }}"
                                class="js-add-user" data-toggle="modal" data-target="#modal-block"
                                data-placement="bottom" title="Ajouter l'utilisateur au service">
                                <i class="fas fa-plus-square fa-2x"></i>
                            </a>
                            {% else %}
                            <a href="{{ path('user_show', {'id':user.id}) }}" class="btn btn-{{ theme_color }} shadow"
                                data-placement="bottom" title="Voir la fiche individuelle">
                                <span class="fas fa-user"></span>
                            </a>
                            {% endif %}
                        </th>
                        <td class="text-uppercase">{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.statusList }}</td>
                        <td>{{ user.phone }}</td>
                        <td>{{ user.email }}</td>
                        <td>{% for role in user.serviceUser %}
                            <a href="{{ path('service_show', {'id': role.service.id}) }}"
                                class="text-{{ theme_color }}">
                                {{  role.service.name }}</a><br>
                            {% endfor %}
                        </td>
                        <td>{% for role in user.serviceUser %}
                            <a href="{{ path('pole_show', {'id': role.service.pole.id}) }}"
                                class="text-{{ theme_color }}">
                                {{  role.service.pole.name }}</a><br>
                            {% endfor %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="navigation">
            {{ knp_pagination_render(users) }}
        </div>

        <div class="row">
            <div class="col-md-12">
                <p><a href="{{ path("security_registration") }}" class="text-{{ theme_color }}">
                        <span class="fas fa-plus-square"></span> Créer un nouvel utilisateur</a></p>
            </div>
        </div>
        {% endif %}
</section>
</div>

{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags("admin") }}
{{ encore_entry_script_tags("search") }}
{% endblock javascripts %}