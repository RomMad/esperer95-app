 {% extends "model/collapseCard.html.twig" %}

 {% set id = "listNotes" %}

 {% block card_title %}Mes dernières notes sociales{% endblock %}

 {% block card_body %}

 <section>
     <div class="table-responsive">
         <table class="table table-striped table-hover text-dark">
             <thead>
                 <tr>
                     <th scope="col" class="align-middle th-w-20"></th>
                     <th scope="col" class="align-middle th-w-150">Titre</th>
                     <th scope="col" class="align-middle th-w-100">Suivi concerné</th>
                     <th scope="col" class="align-middle th-w-100">Statut</th>
                     <th scope="col" class="align-middle th-date">Date de création</th>
                     <th scope="col" class="align-middle th-date">Date de modification</th>
                 </tr>
             </thead>
             <tbody>
                 {% for note in notes %}
                 <tr>
                     <th scope="row" class="align-middle">
                         <a href="{{ path('notes', {'id':note.supportGroup.id}) }}"
                             class="btn btn-{{ theme_color }} btn-sm shadow" data-placement="bottom"
                             title="Voir le suivi social"><span class="fas fa-eye"></span>
                         </a>
                     </th>
                     <td class="align-middle">{{ note.title }}</td>
                     <td class="align-middle">
                         {{ note.supportGroup.groupPeople.rolePerson|first.person.fullname }}<br>
                     </td>
                     <td class="align-middle">{{ note.statusList }}</td>
                     <td class="align-middle">{{ note.createdAt| date("d/m/Y") }}</td>
                     <td class="align-middle">{{ note.updatedAt| date("d/m/Y") }}</td>
                 </tr>
                 {% endfor %}
             </tbody>
         </table>
     </div>
 </section>

 {% endblock %}