{% extends "base.html.twig" %}

{% form_theme form "form/bootstrap_4_horizontal.html.twig" %}

{% block title %}Fiche utilisateur{% endblock %}

{% block stylesheets %}{% endblock %}

{% set user = form.vars.value %}

{% block body %}

<div class="container">

    <h1 class="h2 mb-3">{% if edit_mode %}Fiche utilisateur{% else %}Création d'un utilisateur{% endif %}</h1>
    {% if edit_mode %}
    <div class="small text-secondary">
        <p> Dernière connexion le {{user.lastLogin | date("d/m/Y à H:i") }}
        </p>
    </div>
    {% else %}
    <div class="mb-4"></div>
    {% endif %}

    <hr>

    <section id="user">

        {% include 'msgFlash.html.twig' %}
        <div id="js-msg-flash-content"></div>

        {{ form_start(form) }}

        {% if edit_mode %} {% set form_user = form %} {% else %} {% set form_user = form.user %} {% endif %}

        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form_user.firstname) }}</div>
            <div class="col-md-6">{{ form_row(form_user.lastname) }}</div>
            <div class="col-md-6">{{ form_row(form_user.username) }}</div>
        </div>

        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form_user.phone) }}</div>
            <div class="col-md-6">{{ form_row(form_user.email) }}</div>
        </div>

        {{ form_row(form._token) }}
        <div class="form-group row">
            <div class="col-md-12">
                <div class="mb-4 float-right">
                    {% if edit_mode %}
                    <button type="submit" id="updateuser" name="updateuser" class="btn btn-{{ theme_color }} shadow"
                        data-url="{{ path('update_user', {'id':user.id}) }}">Mettre à jour</button>
                    <input type="submit" id="send" name="send" class="btn btn-secondary shadow" value="Enregistrer">
                    {% else %}
                    <input type="submit" id="send" name="send" id="send" class="btn btn-{{ theme_color }} shadow"
                        value="Enregistrer">
                    {% endif %}

                </div>

            </div>
        </div>

        {{ form_end(form, {"render_rest": false}) }}
    </section>

    <hr>

    <section id="social-supports">
        <h2 class="h4 my-4">Suivis sociaux en cours</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover text-dark">
                <thead>
                    <tr>
                        <th scope="col" class="align-middle th-width-20px"></th>
                        <th scope="col" class="align-middle th-width-150px">Nom</th>
                        <th scope="col" class="align-middle th-width-100px">Prénom</th>
                        <th scope="col" class="align-middle th-width-100px">Typologie familiale</th>
                        <th scope="col" class="align-middle th-date">Date de début</th>
                        <th scope="col" class="align-middle th-date">Date de fin</th>
                        <th scope="col" class="align-middle th-width-100px">Statut</th>
                    </tr>
                </thead>

                <tbody>

                    {% for social_support in form.vars.value.socialSupportsGrpCreated|filter(social_support => social_support.status == 2)|sort ((a, b) => a.startDate <=> b.startDate)|reverse  %}
                    <tr>
                        <th scope="row">
                            <a href="{{ path('social_support_show', {'id':social_support.groupPeople.id, 'social_support_id':social_support.id}) }}"
                                class="
                                btn btn-{{ theme_color }} btn-sm shadow" data-placement="bottom" title="Voir le suivi
                                social">
                                <span class="fas fa-eye"></span>
                            </a>
                        </th>
                        <td class="text-uppercase">
                            {% for person in social_support.groupPeople.rolePerson|filter(person => person.role != 3) %}
                            {{ person.person.lastname }}<br>
                            {% endfor %}
                        <td>
                            {% for person in social_support.groupPeople.rolePerson|filter(person => person.role != 3) %}
                            {{ person.person.firstname }}<br>
                            {% endfor %}
                        </td>
                        <td>{{ social_support.groupPeople.getFamilyTypologyType }}<br>
                            {% if social_support.groupPeople.nbPeople > 1 %}{{ social_support.groupPeople.nbPeople }}
                            personnes{% endif %}
                        </td>
                        <td>{{ social_support.startDate| date("d/m/Y") }}</td>
                        <td>{{ social_support.endDate| date("d/m/Y") }}</td>
                        <td>{{ social_support.getstatusType }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{ path('new_support_search_person') }}" class="m-3 btn btn-{{ theme_color }} btn-sm">
            <span class="fas fa-plus-square"></span>
            Créer un nouveau suivi</a>
        <br />
    </section>

    <hr>

    <section id="services">
        <h2 class="h4 my-4">Services rattachés</h2>

        {% if user.roleuser %}
        <div class="table-responsive">
            <table class="table table-striped table-hover text-dark">
                <thead>
                    <tr>
                        <th scope="col" class="align-middle th-width-20px"></th>
                        <th scope="col" class="align-middle th-width-150px">Rôle dans le service</th>
                        <th scope="col" class="align-middle th-width-140px">Nom du service</th>
                        <th scope="col" class="align-middle th-width-140px">Téléphone du service</th>
                        <th scope="col" class="align-middle th-width-140px">Pôle</th>

                    </tr>
                </thead>

                <tbody>
                    {% for role in user.roleuser %}
                    <tr>
                        <th scope="row">
                            <a href="{{ path('service_show', {'id':role.service.id}) }}"
                                class="btn btn-{{ theme_color }} shadow" data-placement="bottom"
                                title="Voir la fiche du service">
                                <span class="fas fa-eye"></span>
                            </a>
                        </th>
                        <td>{{ role.getRoleType }}</td>
                        <td>{{ role.service.name }}</td>
                        <td>{{ role.service.phone }}</td>
                        <td>{{ role.service.pole.name }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}
    </section>

</div>
{% endblock %}

{% block javascripts %}
{% endblock javascripts %}