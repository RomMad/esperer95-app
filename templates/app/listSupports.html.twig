{% extends 'base.html.twig' %}

{% form_theme form "bootstrap_4_layout.html.twig" %}

{% block title %}Les suivis | Esperer95-app{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

<section class="my-0">
    {% include "model/msgFlash.html.twig" %}
    <div class="container">
        <h1 class="h2 mb-4">Les suivis</h1>
    </div>

    <div id="form-search" class="jumbotron py-3">
        {{ form_start(form) }}
        <div class="form-inline justify-content-md-center align-items-end">
            <div class="form-group col-auto my-1 px-1">
                {{ form_row(form.lastname) }}
            </div>
            <div class="form-group col-auto my-1 px-1 ">
                {{ form_row(form.firstname) }}
            </div>
            <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text d-none d-sm-block" data-toggle="tooltip" data-placement="bottom"
                            title="Date de naissance">
                            <i class=" fas fa-calendar-alt text-dark"></i>
                        </div>
                    </div>
                    {{ form_row(form.birthdate) }}
                </div>
            </div>
            <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                {{ form_row(form.familyTypology) }}
            </div>
            <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                {{ form_row(form.nbPeople) }}
            </div>
            <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                <button type="submit" id="search" class="btn btn-{{ theme_color }} shadow">
                    <i class="fas fa-search" data-placement="bottom" title="Rechercher"></i>
                </button>
                <button id="js-btn-clear" class="btn btn-secondary ml-2 shadow"><i class="fas fa-eraser"></i></button>
            </div>
            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>

    <div class="container">

        <div class="row align-items-baseline">
            <div class="col-md-4 count align-middle">
                <p class="align-middle">Résultat :
                    {{ role_people.getTotalItemCount | number_format(0,'', ' ')  }}
                    personnes.</p>
            </div>
            <div class="col-md-8">
                <div class="navigation">{{ knp_pagination_render(role_people) }}</div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover text-dark shadow-sm">
                <thead>
                    <tr>
                        <th scope="col" class="align-middle th-w-20"></th>
                        <th scope="col" class="align-middle th-w-150">
                            {{ knp_pagination_sortable(role_people, "Nom et prénom", "p.lastname") }}
                        </th>
                        <th scope="col" class="align-middle th-date">
                            {{ knp_pagination_sortable(role_people, "Date de naissance", "p.birthdate") }}
                        </th>
                        <th scope="col" class="align-middle th-w-140">
                            {{ knp_pagination_sortable(role_people, "Typologie familiale", "g.familyTypology") }}
                        </th>
                        <th scope="col" class="align-middle th-w-80">Date de début de suivi</th>
                        <th scope="col" class="align-middle th-w-80">Date de fin de suivi</th>
                        <th scope="col" class="align-middle th-w-80">Statut du suivi</th>
                    </tr>
                </thead>
                <tbody>
                    {% for person in role_people %}
                    <tr>
                        <th scope="row">
                            <a href="{% if person.groupPeople %}{{ path('group_people_show', {'id':person.groupPeople.id}) }} {% endif %}"
                                class="btn btn-{{ theme_color }} shadow" data-placement="bottom"
                                title="Voir la fiche du groupe">
                                <span class="fas fa-users"></span>
                            </a>
                        </th>
                        <td>
                            <a href="{% if person.groupPeople %}{{ path('group_people_show', {'id':person.groupPeople.id}) }} {% endif %}"
                                class="text-{{ theme_color }}">
                                <span
                                    class="text-uppercase font-weight-bold">{{ person.person.lastname }}</span><br />{{ person.person.firstname }}</a>
                        </td>
                        <td>
                            {% if person.person.birthdate %}
                            {{ person.person.birthdate | date("d/m/Y") }}<br />
                            ({{ person.person.age }}
                            {% if person.person.age > 1 %} ans{% elseif person.person.age > 0 %} an{% endif %})
                            {% endif %}
                        </td>
                        <td>
                            {{ person.groupPeople.getFamilyTypologyType }}<br />
                            {% if person.groupPeople.nbPeople > 1 %}
                            {{ person.groupPeople.nbPeople }} personnes
                            {% endif %}
                        </td>
                        <td>
                            {% for support in person.groupPeople.supports %}
                            {{ support.startDate | date("d/m/Y") }}<br />
                            {% endfor %}
                        </td>
                        <td>
                            {% for support in person.groupPeople.supports %}
                            {{ support.endDate | date("d/m/Y") }}<br />
                            {% endfor %}
                        </td>
                        <td>
                            {% for support in person.groupPeople.supports %}
                            {{ support.getStatusType  }}<br />
                            {% endfor %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="navigation">
            {{ knp_pagination_render(role_people) }}
        </div>
</section>
{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags("search") }}
{% endblock javascripts %}