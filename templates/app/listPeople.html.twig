{% extends "base.html.twig" %}

{% form_theme form "bootstrap_4_layout.html.twig" %}

{% block title %}
{% if group_people is defined %}Rechercher une personne
{% else %}Liste despersonnes{% endif %}
{% endblock %}

{% block stylesheets %}

<link href="{{ asset("css/table.css") }}" rel="stylesheet" />

{% endblock %}

{% block body %}

<section>
    <div class="container">
        <h1 class="h2 my-4">{% if group_people is defined %}Rechercher une personne
            {% else %}Liste des personnes{% endif %}</h1>
    </div>

    <div class="container-fluid p-0">
        <div class="jumbotron py-3">
            {{ form_start(form) }}
            <div class="form-inline justify-content-md-center align-items-end">
                <div class="form-group col-auto my-1 px-1">
                    {{ form_row(form.lastname) }}
                </div>
                <div class="form-group col-auto my-1 px-1 ">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                    <div class=""><i class="fas fa-calendar-alt mx-1 text-black-50 d-none d-sm-block"
                            data-toggle="tooltip" data-placement="bottom" title="Date de naissance"></i></div>
                    {{ form_row(form.birthdate) }}
                </div>
                {#<div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                    {{ form_row(form.age) }} 
                </div> #}
                <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                    <div><i class="fas fa-venus-mars mx-1 text-black-50 d-none d-sm-block" data-toggle="tooltip"
                            data-placement="bottom" title="Sexe"></i></div>
                    {{ form_row(form.gender) }}
                </div>
                <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                    <div><i class="fas fa-phone mx-1 text-black-50 d-none d-sm-block" data-toggle="tooltip"
                            data-placement="bottom" title="Téléphone"></i></div>
                    {{ form_row(form.phone) }}
                </div>
                <div class="form-group col-auto my-1 px-1">

                    <button type="submit" id="search" class="btn btn-primary shadow"><i
                            class="fas fa-search"></i></button>
                    <a href="{{ path("list_people") }}" class="btn btn-secondary ml-2 shadow"><i
                            class="fas fa-eraser"></i></a>
                </div>
                {{ form_end(form, {"render_rest": false}) }}
            </div>
        </div>
    </div>

    {% if people is defined %}

    <div class="container">

        {% if people %}

        {% if group_people %}
        <div class="row">
            <div class="col-md-12">
                <p><a href="{{ path("create_person", {"id":group_people.id}) }}" class="text-primary"><span
                            class="fas fa-plus-square"></span> Créer une nouvelle personne</a></p>
            </div>
        </div>
        {% endif %}

        <div class="row align-items-baseline">
            <div class="col-md-4 count align-middle">
                <p class="align-middle">Résultat : {{ people.getTotalItemCount | number_format(0,'', ' ')}}
                    personnes.</p>
            </div>
            <div class="col-md-8">
                <div class="navigation">{{ knp_pagination_render(people) }}</div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover shadow">
                <thead class="bg-dark">
                    <tr>
                        <th scope="col" class="align-middle th-width-20px"></th>
                        <th scope="col" class="align-middle th-width-150px text-light ">
                            {{ knp_pagination_sortable(people, "Nom", "p.lastname") }}
                        </th>
                        <th scope="col" class="align-middle th-width-120px text-light">
                            {{ knp_pagination_sortable(people, "Prénom", "p.firstname") }}
                        </th>
                        <th scope="col" class="align-middle th-date text-light">
                            {{ knp_pagination_sortable(people, "Date de naissance", "p.birthdate") }}
                        </th>
                        <th scope="col" class="align-middle th-width-80px text-light">
                            {{ knp_pagination_sortable(people, "Sexe", "p.gender") }}
                        </th>
                        <th scope="col" class="align-middle th-date text-light">
                            {{ knp_pagination_sortable(people, "Date de création", "p.createdAt") }}
                        </th>
                        <th scope="col" class="align-middle th-date text-light">
                            {{ knp_pagination_sortable(people, "Date de mise à jour", "p.updatedAt") }}
                        </th>
                    </tr>
                </thead>

                <tbody>

                    {% for person in people %}
                    <tr>
                        <th scope="row">
                            {% if group_people %}
                            <a href="{{ path('group_add_person', {'id':group_people.id, 'person_id': person.id}) }}"
                                class="" data-placement="bottom" title="Ajouter la personne au ménage"
                                onclick="return confirm('Êtes-vous vraiment sûr de vouloir ajouter {{ person.firstname }} {{ person.lastname }} au ménage ?')">
                                <i class="fas fa-plus-square fa-2x"></i>
                            </a>
                            {% else %}
                            <a href="{{ path('person_show', {'id':person.id, 'slug':person.slug}) }}"
                                class="btn btn-primary shadow" data-placement="bottom"
                                title="Voir la fiche de la personne">
                                <span class="fas fa-user-edit"></span>
                            </a>
                            {% endif %}
                        </th>
                        <td>
                            <a href="{{ path('person_show', {'id':person.id, 'slug':person.slug}) }}"
                                class="text-primary font-weight-bold">{{ person.lastname }}</a>
                        </td>
                        <td>{{ person.firstname }}</td>
                        <td>{% if person.birthdate %} {{person.birthdate | date("d/m/Y") }}<br />
                            ({{ person.age }}{% if person.age > 1 %} ans{% elseif person.age %}
                            an{% endif %}){% endif %}</td>
                        <td>{% if person.gender == 1 %}
                            <i class="fas fa-female fa-2x text-dark" data-placement="bottom" title="Femme"></i>
                            {% elseif person.gender == 2 %}
                            <i class="fas fa-male fa-2x text-dark" data-placement="bottom" title="Homme"></i>
                            {% endif %} </td>
                        <td>{{ person.createdAt | date("d/m/Y H:i") }}</td>
                        <td>{{ person.updatedAt | date("d/m/Y H:i") }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="navigation">
            {{ knp_pagination_render(people) }}
        </div>

        {% if group_people %}
        <div class="row">
            <div class="col-md-12">
                <p><a href="{{ path("create_person", {"id":group_people.id}) }}" class="text-primary"><span
                            class="fas fa-plus-square"></span> Créer une nouvelle personne</a></p>
            </div>
        </div>
        {% endif %}
        {% endif %}
</section>
{% endif %}

</div>
{% endblock %}