{% extends "base.html.twig" %}

{% form_theme form "form/bootstrap_4_horizontal.html.twig" %}

{% block title %}Fiche individuelle{% endblock %}

{% block stylesheets %}{% endblock %}

{% set person = form.vars.value %}

{% block body %}

<div class="container">

    <h1 class="h2 mb-3">{% if edit_mode %}Fiche individuelle{% else %}Création d'une personne{% endif %}</h1>
    {% if edit_mode %}
    <div class="small text-secondary">
        <p> Créé le {{person.createdAt | date("d/m/Y à H:i") }}
            {% if person.createdBy %}par {{ person.createdBy.firstname }} {{ person.createdBy.lastname }}{% endif %}
            <span id="js-person-updated"> (modifié le {{ person.updatedAt | date("d/m/Y à H:i") }}
                {% if person.updatedBy %}par {{ person.updatedBy.firstname }}
                {{ person.updatedBy.lastname }}{% endif %})</span>
        </p>
    </div>
    {% else %}
    <div class="mb-4"></div>
    {% endif %}

    {% if group_people is defined and group_people.rolePerson|length > 1 %}
    <div class="my-3">
        <a href="{{ path('group_people_show', {'id': group_people.id}) }}" class="text-{{ theme_color }}">
            <span class="fas fa-users"></span>
            Retour à la fiche du groupe</a>
        <span class="small text-secondary">{{ group_people.getFamilyTypologyType }}
            {% if group_people.nbPeople > 1 %}({{ group_people.nbPeople }}
            personnes)
            {% endif %}
        </span>
        <br />
    </div>
    {% endif %}

    <hr>

    <section id="person" data-is-edit-mode="{{ edit_mode ? 'true' : 'false' }}">

        {% include "model/msgFlash.html.twig" %}
        <div id="js-msg-flash-content"></div>

        {{ form_start(form) }}

        {% if edit_mode %} {% set form_person = form %} {% else %} {% set form_person = form.person %} {% endif %}

        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form_person.firstname) }}</div>
            <div class="col-md-6">{{ form_row(form_person.lastname) }}</div>
            <div class="col-md-6">{{ form_row(form_person.usename) }}</div>
        </div>

        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form_person.birthdate) }}</div>
            <div class="col-md-6"> {{ form_row(form_person.gender) }}</div>
        </div>

        {% if edit_mode == false %}
        <div class="form-group row">
            {% if group_people is not defined %}
            <div class="col-md-6">{{ form_row(form.groupPeople.familyTypology) }}</div>
            <div class="col-md-6">{{ form_row(form.groupPeople.nbPeople) }}</div>
            {% endif %}
            <div class="col-md-6">{{ form_row(form.role) }}</div>
        </div>
        {% endif %}

        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form_person.phone1) }}</div>
            <div class="col-md-6">{{ form_row(form_person.phone2) }}</div>
            <div class="col-md-6">{{ form_row(form_person.email) }}</div>
        </div>
        <div class="form-group row">{{ form_label(form_person.comment) }}
            <div class="col-md-12">{{ form_widget(form_person.comment) }}</div>
        </div>

        {{ form_row(form._token) }}
        <div class="form-group row">
            <div class="col-md-12">
                <div class="mb-4 float-right">
                    {% if edit_mode %}
                    <button type="submit" id="updatePerson" name="updatePerson"
                        class="btn btn-{{ theme_color }} btn-smshadow"
                        data-url="{{ path('update_person', {'id':person.id}) }}">Mettre à jour</button>
                    <input type="submit" id="send" name="send" class="btn btn-secondary shadow" value="Enregistrer">
                    {% else %}
                    <input type="submit" id="send" name="send" id="send" class="btn btn-{{ theme_color }} shadow"
                        value="Enregistrer">
                    {% endif %}

                </div>

            </div>
        </div>

        {{ form_end(form, {"render_rest": false}) }}
    </section>

    <hr>

    {% if edit_mode %}

    <section id="social-supports">
        <h2 class="h4 my-4">Historique des suivis sociaux</h2>

        <div class="table-responsive">
            <table class="table table-striped table-hover text-dark">
                <thead>
                    <tr>
                        <th scope="col" class="align-middle th-w-20"></th>
                        <th scope="col" class="align-middle th-w-100">Statut</th>
                        <th scope="col" class="align-middle th-date">Date de début</th>
                        <th scope="col" class="align-middle th-date">Date de fin</th>
                        <th scope="col" class="align-middle th-w-150">Travailleur/se social·e</th>
                        <th scope="col" class="align-middle th-w-150">Service</th>
                        <th scope="col" class="align-middle th-w-100">Pôle</th>
                    </tr>
                </thead>

                <tbody>
                    {% for support in person.supports %}

                    {% set contact_user %}
                    <div class='text-left p-2'>
                        <b>Coordonnées :</b>
                        <br>Téléphone : {{support.supportGrp.createdBy.phone }}
                        <br>Email : {{ support.supportGrp.createdBy.email }}
                    </div>
                    {% endset %}

                    {% set contact_service %}
                    <div class='text-left p-2'>
                        <b>Coordonnées du service: </b>
                        <br>Téléphone : {{ support.supportGrp.service.phone }}
                        <br>Email : {{ support.supportGrp.service.email }}
                    </div>
                    {% endset %}

                    <tr>
                        <th scope="row">
                            {% if support.supportGrp.service.id in rolesUser %}
                            <a href="{{ path('support_show', {'id':support.supportGrp.groupPeople.id , 'support_id':support.supportGrp.id}) }}"
                                class="btn btn-{{ theme_color }} btn-sm shadow" data-placement="bottom"
                                title="Voir le suivi social">
                                <span class="fas fa-eye"></span>
                            </a>
                            {% endif %}
                        </th>
                        <td>{{ support.getStatusType }}</td>
                        <td>{{ support.startDate | date("d/m/Y") }}</td>
                        <td>{{ support.endDate | date("d/m/Y") }}</td>
                        <td><a href="#" class="text-{{ theme_color }}" data-toggle="tooltip" data-placement="right"
                                data-html="true" title="{{ contact_user }}">{{ support.supportGrp.createdBy.firstname }}
                                {{  support.supportGrp.createdBy.lastname }}</a></td>
                        <td>{% if support.supportGrp.service %}
                            <a href="#" class="text-{{ theme_color }}" data-toggle="tooltip" data-placement="right"
                                data-html="true"
                                title="{{ contact_service }}">{{ support.supportGrp.service.name }}</a>{% endif %}
                        </td>
                        <td>{{ support.supportGrp.service.pole.name }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if group_people is defined %}
        <a href="{{ path('support_new', {'id':group_people.id}) }}" class="m-3 btn btn-{{ theme_color }} btn-sm">
            <span class="fas fa-plus-square pr-2"></span>Créer un nouveau suivi</a>
        {% endif %}

    </section>

    <hr>


    <section id="groups-people">
        <h2 class="h4 my-4">Groupes d'appartenance</h2>

        {% if person.rolesPerson %}
        <div class="table-responsive">
            <table class="table table-striped table-hover text-dark">
                <thead class="">
                    <tr>
                        <th scope="col" class="align-middle th-w-20"></th>
                        <th scope="col" class="align-middle th-w-80 d-none d-sm-table-cell" data-placement="bottom"
                            title="N° d'identification du groupe">ID groupe</th>
                        <th scope="col" class="align-middle th-w-140">Typologie familiale</th>
                        <th scope="col" class="align-middle th-w-100 d-none d-sm-table-cell">Nb de personnes</th>
                        <th scope="col" class="align-middle th-w-150">Rôle dans le groupe</th>
                        <th scope="col" class="align-middle th-w-100 d-none d-sm-table-cell">Date de création</th>
                        <th scope="col" class="align-middle th-w-100 d-none d-sm-table-cell">Date de modification
                        </th>
                    </tr>
                </thead>

                <tbody>
                    {% for role in person.rolesPerson %}
                    <tr>
                        <th scope="row">
                            <a href="{{ path('group_people_show', {'id':role.groupPeople.id}) }}"
                                class="btn btn-{{ theme_color }} shadow" data-placement="bottom"
                                title="Voir la fiche du groupe">
                                <span class="fas fa-eye"></span>
                            </a>
                        </th>
                        <td data-placement="bottom" title="N° d'identification du groupe"
                            class="d-none d-sm-table-cell">
                            {{ role.groupPeople.id }}</td>
                        <td class="d-table-row d-sm-table-cell">
                            {{ role.groupPeople.getFamilyTypologyType }}
                        </td>
                        <td class="d-table-row d-sm-table-cell">
                            {% if role.groupPeople.nbPeople > 1 %}<span
                                class="d-inline d-sm-none">{{ role.groupPeople.nbPeople }}personnes</span>{% endif %}
                        </td>
                        <td>{{ role.getRoleType }} {% if role.head %} (DP){% endif %}</td>
                        <td class="d-none d-sm-table-cell">{{ role.groupPeople.createdAt | date("d/m/Y H:i") }}</td>
                        <td class="d-none d-sm-table-cell">{{ role.groupPeople.updatedAt | date("d/m/Y H:i") }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}
        <a href="" class="m-3 btn btn-{{ theme_color }} btn-sm"><span class="fas fa-plus-square pr-2"></span>Créer un
            nouveau groupe</a>
    </section>

    {% endif %}

</div>
{% endblock %}

