{% extends"base.html.twig" %}

{% form_theme form "form/bootstrap_4_horizontal_v2_layout.html.twig" %}

{% block title %}Fiche ménage{% endblock %}

{% block stylesheets %}

<link href="{{ asset("css/table.css") }}" rel="stylesheet" />

{% endblock %}

{% block body %}

<div class="container">

    <div>
        <h1 class="h2 mb-3">Groupe de personnes (ménage)</h1>

        {% if edit_mode %}
        <div class="small text-secondary">
            <p>Créé le {{group_people.createdAt | date("d/m/Y à H:i") }}{% if group_people.createdBy %} par
                {{ group_people.createdBy.username }}{% endif %} (modifié le
                {{ group_people.updatedAt | date("d/m/Y à H:i") }}{% if group_people.updatedBy %} par
                {{ group_people.updatedBy.username }}{% endif %})</p>
        </div>
        {% endif %}
    </div>

    <hr>

    <section id="people-group">
        {{ form_start(form) }}
        {% if edit_mode %}
        <div class="row">
            <div class="col-md-12 mb-3">
                <div class="float-right">
                    <button type="submit" name="updateInfo" class="btn btn-primary shadow">Mettre à jour</button>
                </div>
            </div>
        </div>
        {% endif %}
        {% if group_people.id %}
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped table-hover shadow">
                        <thead class="bg-dark">
                            <tr>
                                <th scope="col" class="align-middle th-width-20px"></th>
                                <th scope="col" class="align-middle text-light th-width-20px" data-placement="bottom"
                                    title="Demandeur principal">DP</th>
                                <th scope="col" class="align-middle text-light th-width-150px">Prénom</th>
                                <th scope="col" class="align-middle text-light th-width-150px">Nom</th>
                                <th scope="col" class="align-middle text-light th-width-120px">Date de naissance</th>
                                <th scope="col" class="align-middle text-light th-width-50px">Âge</th>
                                <th scope="col" class="align-middle text-light th-width-100px">Sexe</th>
                                <th scope="col" class="align-middle text-light th-width-150px">Rôle</th>
                                <th scope="col" class="align-middle th-width-50px"></th>
                            </tr>
                        </thead>
                        <tbody>

                            {% for form_person in form.rolePerson.children %}
                            <tr>
                                <th scope="row">
                                    <a href="{{ path("group_person_show", {"id":group_people.id, "person_id":form_person.vars.value.person.id, "slug":form_person.vars.value.person.slug}) }}"
                                        class="btn btn-primary shadow" data-placement="bottom"
                                        title="Modifier les informations de la personne">
                                        <span class="fas fa-user-edit"></span>
                                    </a>
                                </th>
                                <td class="px-1">
                                    <div class="custom-control custom-radio pl-3">
                                        {{ form_widget(form_person.head) }}
                                    </div>
                                </td>
                                <td class="px-1">{{ form_widget(form_person.person.firstname) }}</td>
                                <td class="px-1">{{ form_widget(form_person.person.lastname) }}</td>
                                <td class="px-1">{{ form_widget(form_person.person.birthdate) }}</td>
                                <td class="px-1 pt-4"> {% set age = form_person.vars.value.person.age %}
                                    {{ age }} {% if age > 1 %}ans{% elseif age %} an{% endif %}
                                <td class="px-1">{{ form_widget(form_person.person.gender) }}</td>
                                <td class="px-1">{{ form_widget(form_person.role) }}</td>
                                <td class="px-1">
                                    <a href="{{ path('remove_person', {'id':group_people.id, 'person_id':form_person.vars.value.person.id, 'role_person_id':form_person.vars.value.id, '_token':csrf_token('remove' ~ form_person.vars.value.id)}) }}"
                                        class="btn btn-danger shadow"
                                        onclick="return confirm('Êtes-vous vraiment sûr de vouloir retirer {{ form_person.vars.value.person.firstname }} du ménage ?')"
                                        data-placement="bottom" title="Retirer la personne du groupe">
                                        <span class="fas fa-user-times"></span>
                                    </a>
                                    {# <form method="post"
                                    action="{{ path("remove_person", {"id":group_people.id, "person_id":form_person.vars.value.person.id, "role_person_id":form_person.vars.value.id}) }}"
                                    onsubmit="return confirm('Êtes-vous vraiment sûr de vouloir retirer cette personne du ménage ?')">
                                    <input type="hidden" name="_method" value="REMOVE">
                                    <input type="hidden" name="_token"
                                        value="{{ csrf_token("remove" ~ form_person.vars.value.id) }}">
                                    <button class="btn btn-danger shadow"><span class="fas fa-trash"></span></button>
                                    </form> #}
                                </td>
                            </tr>
                            {% endfor %}
                            {# <form action="">
                            <tr>
                                <th scope="row">
                                    <a href="" class="text-primary font-weight-bold"><span
                                            class="mt-2 fas fa-user-edit"></span>
                                    </a>
                                </th>
                                <td class="px-1"></td>
                                <td class="px-1"></td>
                                <td class="px-1"></td>
                                <td class="px-1"></td>
                                <td class="px-1"></td>
                                <td class="px-1"></td>
                                <td class="px-1">
                                    <a href="" name="remove" id="remove" class="btn btn-primary shadow"
                                        id="remove"><span class=" fas fa-save"></span></a>
                                </td>
                            </tr>
                        </form> #}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <p><a href="{{ path("group_search_person", {"id":group_people.id}) }}" class="float-right text-primary"><span
                    class="fas fa-plus-square"></span>
                Ajouter une personne</a></p><br />
    </section>
    {% endif %}

    <section>
        <div class="row">
            <div class="col-md-12">
                <div class="">
                    {{ form_row(form.familyTypology) }}
                    {{ form_row(form.nbPeople) }}
                    {{ form_row(form.comment) }}
                    {{ form_row(form._token) }}

                    <div class="float-right">
                        <input type="submit" name="updateInfo" id="updateInfo" class="btn btn-primary shadow"
                            value="{% if edit_mode %}Mettre à jour{% else %}Enregistrer{% endif %}" id="save">
                    </div>

                </div>
            </div>
        </div>
    </section>
    {{ form_end(form, {"render_rest": false}) }}

    <hr>

    {% if group_people.id %}
    <section id="social-supports">
        <h2 class="h3 my-4">Historique des suivis sociaux</h2>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover shadow">
                <thead class="bg-dark">
                    <tr>
                        <th scope="col" class="align-middle th-width-20px">
                        </th>
                        <th scope="col" class="align-middle th-width-100px">
                            <a href="" class="sorting-indicator text-light">Statut
                                <span class="fas fa-caret-up">
                            </a>
                        </th>
                        <th scope="col" class="align-middle th-date">
                            <a href="" class="sorting-indicator text-light">Date de<br />début
                                <span class="fas fa-caret-up">
                            </a>
                        </th>
                        <th scope="col" class="align-middle th-date">
                            <a href="" class="sorting-indicator text-light">Date de<br />fin
                                <span class="fas fa-caret-up">
                            </a>
                        </th>
                        <th scope="col" class="align-middle th-width-150px">
                            <a href="" class="sorting-indicator text-light">Travailleur/euse social(e)
                                <span class="fas fa-caret-up">
                            </a>
                        </th>
                        <th scope="col" class="align-middle th-width-150px">
                            <a href="" class="sorting-indicator text-light">Service
                                <span class="fas fa-caret-up">
                            </a>
                        </th>
                        <th scope="col" class="align-middle th-width-100px">
                            <a href="" class="sorting-indicator text-light">Pôle
                                <span class="fas fa-caret-up">
                            </a>
                        </th>
                    </tr>
                </thead>

                <tbody>

                    {% for socialSupport in group_people.socialSupports %}
                    <tr>
                        <th scope="row">
                        </th>
                        <td>{{ socialSupport.listStatus }}</td>
                        <td>
                            <a href="" class="text-primary font-weight-bold">
                                {{ socialSupport.beginningDate | date("d/m/Y") }}
                            </a>
                            <a class="text-blue" href=""></a>
                        </td>
                        <td>{{ socialSupport.endDate | date("d/m/Y") }}</td>
                        <td>XXX </td>
                        <td>XXX </td>
                        <td>XXX </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="" class="text-primary"><span class="fas fa-plus-square"></span>
            Créer un nouveau suivi</a>

        <br />
    </section>
    <hr>
    {% endif %}

</div>
{% endblock %}

{% block javascripts %}

<script src="{{ asset("js/selectRadio.js") }}"></script>

{% endblock %}