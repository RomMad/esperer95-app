{% extends "base.html.twig" %}

{% form_theme form "form/bootstrap_4_horizontal.html.twig" %}

{% block title %}Fiche de groupe{% endblock %}

{% block stylesheets %}{% endblock %}

{% set group_people = form.vars.value %}

{% block body %}

<div class="container">
    <div>
        <h1 class="h2 mb-3">Fiche de groupe</h1>

        <div class="small text-secondary">
            <p>Créé le
                {{ group_people.createdAt | date("d/m/Y à H:i") }}
                {% if group_people.createdBy %} par {{ group_people.createdBy.username }}
                {% endif %} (modifié le {{ group_people.updatedAt | date("d/m/Y à H:i") }}
                {% if group_people.updatedBy %} par {{ group_people.updatedBy.username }}{% endif %})</p>
        </div>
    </div>

    <hr>

    <section>

        {% include 'msgFlash.html.twig' %}
        <div id="js-msg-flash-content"></div>

        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-12 mb-3">
                <div class="float-right">
                    <button type="submit" name="updateInfo" class="btn btn-{{ theme_color }} shadow">Mettre à
                        jour</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped table-hover text-dark">
                        <thead>
                            <tr>
                                <th scope="col" class="align-middle th-width-20px"></th>
                                <th scope="col" class="align-middle th-width-20px d-none d-sm-table-cell"
                                    data-placement="bottom" title="Demandeur/euse principal·e">DP</th>
                                <th scope="col" class="align-middle th-width-150px d-table-row d-sm-table-cell">Prénom
                                </th>
                                <th scope="col" class="align-middle th-width-150px d-table-row d-sm-table-cell">Nom</th>
                                <th scope="col" class="align-middle th-width-120px">Date de naissance</th>
                                <th scope="col" class="align-middle th-width-50px d-none d-sm-table-cell">
                                    Âge
                                </th>
                                <th scope="col" class="align-middle th-width-100px d-table-row d-sm-table-cell">Sexe
                                </th>
                                <th scope="col" class="align-middle th-width-150px d-table-row d-sm-table-cell">Rôle
                                </th>
                                <th scope="col" class="align-middle th-width-50px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for form_person in form.rolePerson.children|sort ((a, b) => a.person.birthdate <=> b.person.birthdate) %}
                            {% set person = form_person.vars.value.person %}
                            <tr id="js-person-{{ person.id }}" class="js-tr-person">
                                <th scope="row">
                                    <a href="{{ path("group_person_show", {"id":group_people.id, "person_id":person.id, "slug":person.slug}) }}"
                                        class="btn btn-{{ theme_color }} shadow" data-placement="bottom"
                                        title="Modifier les informations de la personne">
                                        <span class="fas fa-user"></span>
                                    </a>
                                </th>
                                <td class="align-middle px-1 d-none d-sm-table-cell">
                                    <div class="custom-control custom-radio custom-radio-{{ theme_color }} pl-3">
                                        {{ form_widget(form_person.head) }}
                                    </div>
                                </td>
                                <td class="px-1 d-table-row d-sm-table-cell">
                                    {{ form_widget(form_person.person.firstname) }}</td>
                                <td class="px-1 d-table-row d-sm-table-cell">
                                    {{ form_widget(form_person.person.lastname) }}</td>
                                {% set age = person.age %}
                                <td class="px-1">
                                    {{ form_widget(form_person.person.birthdate) }}
                                    <span class="d-inline d-sm-none px-1 text-center">{{ age }}
                                        {% if age > 1 %}ans
                                        {% elseif age %}
                                        an
                                        {% endif %}
                                    </span>
                                </td>
                                <td class="align-middle text-center px-1 d-none d-sm-table-cell">
                                    {{ age }}
                                    {% if age > 1 %}ans
                                    {% elseif age %}
                                    an
                                    {% endif %}
                                </td>
                                <td class="px-1 d-table-row d-sm-table-cell">
                                    {{ form_widget(form_person.person.gender) }}</td>
                                <td class="px-1 d-table-row d-sm-table-cell">{{ form_widget(form_person.role) }}</td>
                                <td class="px-1">
                                    <button class="js-remove btn btn-danger shadow"
                                        data-url="{{ path('remove_person', {'id':group_people.id, 'person_id':person.id, 'role_person_id':form_person.vars.value.id, '_token':csrf_token('remove' ~ form_person.vars.value.id)}) }}"
                                        data-toggle="modal" data-target="#modal-block" data-placement="bottom"
                                        title="Retirer la personne du groupe">
                                        <span class="fas fa-user-times"></span>
                                    </button>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path("group_search_person", {"id":group_people.id}) }}"
                    class="btn btn-{{ theme_color }} btn-sm">
                    <span class="fas fa-plus-square"></span> Ajouter une personne</a>
                {# <a href="{{ path("group_create_person", {"id":group_people.id}) }}" class="btn btn-secondary pl-2">
                        <span class="fas fa-plus-square"></span>
                        Créer une nouvelle personne</a> #}
            </div>
        </div>

    </section>

    <section>
        <div class="form-group row">
            <div class="col-md-6">{{ form_row(form.familyTypology) }}</div>
            <div class="col-md-6">{{ form_row(form.nbPeople) }}</div>
        </div>
        <div class="form-group row">{{ form_label(form.comment) }}
            <div class="col-md-12">{{ form_widget(form.comment) }}</div>
        </div>
        {{ form_row(form._token) }}
        <div class="form-group row">
            <div class="col-md-12">
                <div class="float-right">
                    <input type="submit" name="updateInfo" id="updateInfo" class="btn btn-{{ theme_color }} shadow"
                        value="Mettre à jour" id="save">
                </div>
            </div>
        </div>
    </section>
    {{ form_end(form, {"render_rest": false}) }}

    <hr>

    <section>
        <h2 class="h4 my-4">Historique des suivis sociaux</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover text-dark">
                <thead>
                    <tr>
                        <th scope="col" class="align-middle th-width-20px"></th>
                        <th scope="col" class="align-middle th-width-100px">Statut</th>
                        <th scope="col" class="align-middle th-date">Date de début</th>
                        <th scope="col" class="align-middle th-date">Date de fin</th>
                        <th scope="col" class="align-middle th-width-150px">Travailleur/se social·e</th>
                        <th scope="col" class="align-middle th-width-150px">Service</th>
                        <th scope="col" class="align-middle th-width-100px">Pôle</th>
                    </tr>
                </thead>

                <tbody>

                    {% for social_support in group_people.socialSupports|reverse %}

                    {% set contact_user %}
                    <div class='text-left p-2'>
                        <b>Coordonnées :</b>
                        <br>Téléphone : {{ social_support.createdBy.phone }}
                        <br>Email : {{ social_support.createdBy.email }}
                    </div>
                    {% endset %}

                    {% set contact_service %}
                    <div class='text-left p-2'>
                        <b>Coordonnées du service :</b>
                        <br>Téléphone : {{ social_support.service.phone }}
                        <br>Email : {{ social_support.service.email }}
                    </div>
                    {% endset %}

                    <tr>
                        <th scope="row">
                            {% if social_support.service.id in rolesUser %}
                            <a href="{{ path('social_support_show', {'id':group_people.id, 'social_support_id':social_support.id}) }}"
                                class="
                                btn btn-{{ theme_color }} btn-sm shadow" data-placement="bottom" title="Voir le suivi
                                social">
                                <span class="fas fa-eye"></span>
                            </a>
                            {% endif %}
                        </th>
                        <td>{{ social_support.getStatusType }}</td>
                        <td>{{ social_support.startDate | date("d/m/Y") }}</td>
                        <td>{% if social_support.endDate %}{{ social_support.endDate | date("d/m/Y") }}{% endif %}</td>
                        <td><a href="#" class="text-{{ theme_color }}" data-toggle="tooltip" data-placement="right"
                                data-html="true" title="{{ contact_user }}">{{ social_support.createdBy.firstname }}
                                {{ social_support.createdBy.lastname }}</a>
                        </td>
                        <td>{% if social_support.service %}
                            <a href="#" class="text-{{ theme_color }}" data-toggle="tooltip" data-placement="right"
                                data-html="true" title="{{ contact_service }}">{{ social_support.service.name }}</a>
                            {% endif %}
                        </td>
                        <td>{% if social_support.service %}{{ social_support.service.pole.name }}{% endif %}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{ path('social_support_new', {'id':group_people.id}) }}" class="m-3 btn btn-{{ theme_color }} btn-sm">
            <span class="fas fa-plus-square"></span>
            Créer un nouveau suivi</a>
        <br />
    </section>

</div>

{% endblock %}

{% block modal_body %}Êtes-vous vraiment sûr de vouloir retirer cette personne du groupe ?
{% endblock %}
{% block modal_title %}Demande de confirmation
{% endblock %}
{% block modal_confirm %}Retirer la personne
{% endblock %}
{% block modal_cancel %}Annuler
{% endblock %}
{% block modal_alert %}danger
{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags("groupPeople") }}
{% endblock %}