{% extends"base.html.twig" %}

{% form_theme formPerson "form/bootstrap_4_horizontal_v2_layout.html.twig" %}

{% block title %}Fiche personne{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}

<section id="person">
    <div class="my-3">
        {% for rolesPerson in person.rolesPerson %}
        <a href="{{ path('peopleGroupCard', {'id':rolesPerson.peopleGroup.id}) }}" class="text-primary">Retour à
            la fiche du ménage n°{{rolesPerson.peopleGroup.id}}</a>
        <br />
        {% endfor %}
    </div>

    <div class="row">
        <div class="col-md-12 mb-4">
            {% if formPerson is defined %}
            <div class="col-md-8 mx-auto card shadow">
                <div class="form-group row">
                    <h1 class="card-header col-md-12 h2 bg-dark text-light">Fiche personne</h1>
                </div>
                {% if editMode %}
                <div class="small text-secondary">
                    <p>Créé le {{person.creationDate | date("d/m/Y à H:i") }} (modifié le
                        {{person.updateDate | date("d/m/Y à H:i") }}).</p>
                    {# {{ form_row(formPerson.updateDate, {"label": "Date de modification", "attr": {"readonly" : "readonly", } }) }} #}
                </div>
                {% else %}
                <div class="mb-4"></div>
                {% endif %}

                {{ form_start(formPerson) }}

                {{ form_row(formPerson.lastname) }}
                {{ form_row(formPerson.firstname) }}
                {{ form_row(formPerson.lastname) }}
                {{ form_row(formPerson.birthdate) }}
                {{ form_row(formPerson.gender) }}
                {% for rolePerson in formPerson.rolesPerson %}
                {{ form_widget(rolePerson) }}
                {% endfor %}
                {{ form_row(formPerson.comment) }}
                {{ form_row(formPerson._token) }}

                <div class="mb-4 float-right">
                    <input type="submit" name="updateInfo" id="updateInfo" class="btn btn-primary shadow"
                        value="{% if editMode %}Mettre à jour{% else %}Enregistrer{% endif %}" id="save">
                </div>
                {{ form_end(formPerson, {"render_rest": false}) }}
            </div>
            {% endif %}
        </div>
    </div>
</section>

<section>
    <h3 class="my-4">Personnes du ménage</h3>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover shadow">
            <thead class="bg-dark">
                <tr>
                    <th scope="col" class="align-middle th-width-20px">
                        <div class="custom-control custom-checkbox" data-toggle="tooltip" data-placement="top"
                            title="Tout sélectionner">
                            <input type="checkbox" name="select-all" id="select-all" class="custom-control-input" />
                            <label class="custom-control-label" for="select-all"><span class="sr-only">Tout
                                    sélectionner<span></label>
                        </div>
                    </th>
                    <th scope="col" class="align-middle th-width-150px">
                        <a href="" class="sorting-indicator text-light">Nom
                            <span class="fas fa-caret-up">
                        </a>
                    </th>
                    <th scope="col" class="align-middle th-width-120px">
                        <a href="" class="sorting-indicator text-light">Prénom
                            <span class="fas fa-caret-up">
                        </a>
                    </th>
                    <th scope="col" class="align-middle th-date">
                        <a href="" class="sorting-indicator text-light">Date de<br />naissance
                            <span class="fas fa-caret-up">
                        </a>
                    </th>
                    <th scope="col" class="align-middle th-width-80px">
                        <a href="" class="sorting-indicator text-light">Âge
                            <span class="fas fa-caret-up">
                        </a>
                    </th>
                    <th scope="col" class="align-middle th-width-80px">
                        <a href="" class="sorting-indicator text-light">Sexe
                            <span class="fas fa-caret-up">
                        </a>
                    </th>
                    {# <th scope="col" class="align-middle th-width-80px">
                        <a href="" class="sorting-indicator text-light">Rôle
                            <span class="fas fa-caret-up">
                        </a>
                    </th> #}
                    <th scope="col" class="align-middle th-width-100px">
                        <a href="" class="sorting-indicator text-light">Date de création
                            <span class="fas fa-caret-up">
                        </a>
                    </th>
                    <th scope="col" class="align-middle th-date">
                        <a href="" class="sorting-indicator text-light">Date de mise à jour
                            <span class="fas fa-caret-up">
                        </a>
                    </th>
                </tr>
            </thead>

            <tbody>

                {# {% for person in people %}
                <tr>
                    <th scope="row">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input checkbox" name="selectedPosts[]" id=""
                                value="" class="checkbox" />
                            <label class="custom-control-label" for=""><span class="sr-only">Sélectionner<span></label>
                        </div>
                    </th>

                    <td>
                        <a href="{{ path('personCard', {'id':person.id}) }}"
                            class="text-primary font-weight-bold">{{ person.lastname }}</a>
                        <a class="text-blue" href=""></a>
                    </td>
                    <td>{{ person.firstname }}</td>
                    <td>{{ person.birthdate | date("d/m/Y") }}</td>
                    <td>{{ person.age }} an(s)</td>

                    <td>
                        {% if person.gender == 1 %}
                        {{ "Femme" }}
                        {% else %}
                        {{ "Homme" }}
                        {% endif %}
                    </td>
                    <td>{{ person.creationDate | date("d/m/Y H:i") }}</td>
                    <td>{{ person.updateDate | date("d/m/Y H:i") }}</td>
                </tr>
                {% endfor %} #}
            </tbody>
        </table>
    </div>
</section>

{% endblock %}