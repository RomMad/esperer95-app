{% extends "base.html.twig" %}

{% form_theme form "form/bootstrap_4_horizontal.html.twig" %}

{% set typo = form.vars.value.groupPeople.familyTypology %}

{% block title %}Suivi social
{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

<div class="container">

  {% set support = form.vars.value %}

  <h1 class="h2 mb-3">
    {% if edit_mode %}Suivi social{% else %}Nouveau suivi social
    {% endif %}
  </h1>
  {% if edit_mode %}
  <div class="small text-secondary">
    <p>
      Créé le
      {{support.createdAt | date("d/m/Y à H:i") }}
      {% if support.createdBy %}par
      {{ support.createdBy.firstname }} {{ support.createdBy.lastname }}
      {% endif %}
      <span id="js-social-support-updated">
        (modifié le {{ support.updatedAt | date("d/m/Y à H:i") }} par {{ support.updatedBy.firstname }}
        {{ support.updatedBy.lastname }})
      </span>
    </p>
  </div>
  {% else %}
  <div class="mb-4"></div>
  {% endif %}
  {% if group_people is defined %}
  <div class="my-3">
    <div>
      <a href="{{ path('group_people_show', {'id': group_people.id}) }}" class="btn btn-{{ theme_color }} btn-sm mb-2">
        <span class="fas fa-users"></span>
        Fiche groupe</a>
      {% for form_support_pers in form.supportPers.children %}
      {% set person = form_support_pers.vars.data.person %}
      <a href="{{ path("group_person_show", {"id":group_people.id, "person_id":person.id, "slug":person.slug}) }}"
        class="btn btn-outline-{{ theme_color }} btn-sm mb-2">
        {{ person.firstname }}
        {{ person.lastname }}</a>
      {% endfor %}

    </div>


  </div>
  {% endif %}

  <hr>

  {{ form_start(form) }}

  <section id="social-support">

    {% include "model/msgFlash.html.twig" %}
    <div id="js-msg-flash-content"></div>

    <div class="form-group row">
      <div class="col-md-6">{{ form_row(form.startDate) }}</div>
      {% if edit_mode %}
      <div class="col-md-6">{{ form_row(form.endDate) }}</div>
      {% endif %}
      <div class="col-md-6">{{ form_row(form.status) }}</div>
      <div class="col-md-6">{{ form_row(form.service) }}</div>
    </div>

    {# <div class="form-group row">{{ form_label(form.comment) }}<div class="col-md-12">{{ form_widget(form.comment) }}</div></div> #}

    {{ form_row(form._token) }}

    <div class="accordion mb-4" id="accordion-support">
      {% set accordion_id = "accordion-support" %}
      {% include "app/support/sitSocial.html.twig" %}
      {% include "app/support/sitAdm.html.twig" %}
      {% include "app/support/sitFamily.html.twig" %}
      {% include "app/support/sitProf.html.twig" %}
      {% include "app/support/sitBudget.html.twig" %}
    </div>

    <div class="form-group row">
      <div class="col-md-12">
        <div class="mb-4 float-right">
          {% if edit_mode %}
          <button type="submit" id="update" name="update" class="btn btn-{{ theme_color }} shadow"
            data-url="{{ path('update_person', {'id':support.id}) }}">Mettre à jour</button>
          <input type="submit" id="send" name="send" class="btn btn-secondary shadow" value="Enregistrer">
          {% else %}
          <input type="submit" id="send" name="send" id="send" class="btn btn-{{ theme_color }} shadow"
            value="Enregistrer">
          {% endif %}
        </div>
      </div>
    </div>

  </section>

  {% if edit_mode %}

  <hr>

  <section class="{% if form.supportPers.children|length == 1 %}d-none{% endif %}">
    <h2 class="h4 my-4">Personnes rattachées au suivi social</h2>
    <div class="row">
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table table-striped table-hover text-dark shadow-sm">
            <thead>
              <tr>
                <th scope="col" class="align-middle th-width-20px"></th>
                <th scope="col" class="align-middle th-width-150px">Prénom</th>
                <th scope="col" class="align-middle th-width-150px">Nom</th>
                <th scope="col" class="align-middle th-width-100px">Date de début</th>
                <th scope="col" class="align-middle th-width-100px">Date de fin</th>
                <th scope="col" class="align-middle th-width-100px">Statut</th>
                <th scope="col" class="align-middle th-width-150px">Commentaire</th>
              </tr>
            </thead>
            <tbody>
              {% for form_support_pers in form.supportPers.children %}
              {% set person = form_support_pers.vars.data.person %}
              <tr>
                <th scope="row">
                  <a href="{{ path("group_person_show", {"id":group_people.id, "person_id":person.id, "slug":person.slug}) }}"
                    class="btn btn-{{ theme_color }} shadow" data-placement="bottom"
                    title="Modifier les informations de la personne">
                    <span class="fas fa-user-edit"></span>
                  </a>
                </th>
                <td class="px-1 align-middle">{{ person.firstname }}</td>
                <td class="px-1 align-middle">{{ person.lastname }}</td>
                <td class="px-1">{{ form_widget(form_support_pers.startDate) }}</td>
                <td class="px-1">{{ form_widget(form_support_pers.endDate) }}</td>
                <td class="px-1">{{ form_widget(form_support_pers.status) }}</td>
                <td class="px-1">{{ form_widget(form_support_pers.comment) }}</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </section>

  {% endif %}

  {{ form_end(form, {"render_rest": false}) }}

</div>
{% endblock %}

{% block javascripts %}
{# <script src="{{ asset("js/validationsupport.js") }}"></script> #}
{{ encore_entry_script_tags("support") }}
{% endblock javascripts %}