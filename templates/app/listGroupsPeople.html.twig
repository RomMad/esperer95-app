{% extends 'base.html.twig' %}

{% form_theme form "bootstrap_4_layout.html.twig" %}

{% block title %}Liste des ménages | Esperer95-app{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

<section class="my-0">
    <div class="container">
        {% include "model/msgFlash.html.twig" %}
        <h1 class="h2 mb-4">Liste des ménages</h1>
    </div>

    <div id="form-search" class="jumbotron py-3">
        {{ form_start(form) }}
        <div class="form-inline justify-content-md-center align-items-end">
            <div class="form-group col-auto my-1 px-1">
                {{ form_row(form.lastname) }}
            </div>
            <div class="form-group col-auto my-1 px-1 ">
                {{ form_row(form.firstname) }}
            </div>
            <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text d-none d-sm-block" data-toggle="tooltip" data-placement="bottom"
                            title="Date de naissance">
                            <i class=" fas fa-calendar-alt text-black-50"></i>
                        </div>
                    </div>
                    {{ form_row(form.birthdate) }}
                </div>
            </div>
            <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                <div class="custom-control custom-checkbox custom-checkbox-{{ theme_color }} pl-2 py-2 text-dark"
                    data-placement="bottom" title="Demandeur/euse princiapl·e">
                    {{ form_row(form.head) }}
                </div>
            </div>
            <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                {{ form_row(form.familyTypology) }}
            </div>
            <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                {{ form_row(form.nbPeople) }}
            </div>
            <div class="form-group col-auto my-1 px-1 d-inline-flex align-items-baseline">
                <button type="submit" id="search" class="btn btn-{{ theme_color }} shadow"><i class="fas fa-search"
                        data-placement="bottom" title="Rechercher"></i></button>
                <button id="js-btn-clear" class="btn btn-secondary ml-2 shadow"><i class="fas fa-eraser"></i></button>
            </div>
            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>

    <div class="container">

        <div class="row align-items-baseline">
            <div class="col-md-4 count align-middle">
                <p class="align-middle">Résultat : {{ role_people.getTotalItemCount | number_format(0,'', ' ')  }}
                    personnes.</p>
            </div>
            <div class="col-md-8">
                <div class="navigation">{{ knp_pagination_render(role_people) }}</div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover text-dark shadow-sm">
                <thead>
                    <tr>
                        <th scope="col" class="align-middle th-w-20">
                        </th>
                        <th scope="col" class="align-middle th-w-80" data-placement="bottom"
                            title="N° d'identification du groupe">
                            {{ knp_pagination_sortable(role_people, "ID", "g.id") }}
                        </th>
                        <th scope="col" class="align-middle th-w-150 text-uppercase">
                            {{ knp_pagination_sortable(role_people, "Nom", "p.lastname") }}
                        </th>
                        <th scope="col" class="align-middle th-w-120 text-capitalize">
                            {{ knp_pagination_sortable(role_people, "Prénom", "p.firstname") }}
                        </th>
                        <th scope="col" class="align-middle th-date">
                            {{ knp_pagination_sortable(role_people, "Date de naissance", "p.birthdate") }}
                        </th>
                        <th scope="col" class="align-middle th-w-80">
                            {{ knp_pagination_sortable(role_people, "Sexe", "p.gender") }}
                        </th>
                        <th scope="col" class="align-middle th-w-100">
                            {{ knp_pagination_sortable(role_people, "Rôle", "r.role") }}
                        </th>
                        <th scope="col" class="align-middle th-w-140">
                            {{ knp_pagination_sortable(role_people, "Typologie familiale", "g.familyTypology") }}
                        </th>
                        <th scope="col" class="align-middle th-w-100">
                            {{ knp_pagination_sortable(role_people, "Nb de pers.", "g.nbPeople") }}
                        </th>
                    </tr>
                </thead>

                <tbody>
                    {% for person in role_people %}
                    <tr>
                        <th scope="row">
                            {% if person.groupPeople.nbPeople > 1 %}
                            <a href="{% if person.groupPeople %}{{ path('group_people_show', {'id':person.groupPeople.id}) }}
                                {% endif %}" class="btn btn-{{ theme_color }} shadow" data-placement="bottom"
                                title="Voir la fiche du groupe"><span class="fas fa-users"></span></a>
                            {% else %}
                            <a href="{{ path('group_person_show', {'id':person.groupPeople.id, 'person_id':person.person.id, 'slug':person.person.slug}) }}"
                                class="btn btn-{{ theme_color }} shadow" data-placement="bottom"
                                title="Voir la fiche individuelle"> <span class="fas fa-user"></span></a>
                            {% endif %}
                        </th>
                        <td data-placement="bottom" title="N° d'identification du groupe">{{ person.groupPeople.id }}
                        </td>
                        <td>
                            <a href="{{ path('group_person_show', {'id':person.groupPeople.id, 'person_id':person.person.id, 'slug':person.person.slug}) }}"
                                class="text-{{ theme_color }} text-uppercase font-weight-bold" data-placement="bottom"
                                title="Voir la fiche individuelle">{{ person.person.lastname }}</a>
                        </td>
                        <td class="text-capitalize">{{ person.person.firstname }}{% if  person.head %}<span
                                data-placement="bottom" title="Demandeur/euse principal·e">*</span>{% endif %}</td>
                        <td>{% if person.person.birthdate %}{{ person.person.birthdate | date("d/m/Y") }}<br />
                            ({{ person.person.age }}{% if person.person.age > 1 %}
                            ans{% elseif person.person.age > 0 %} an{% endif %}){% endif %}
                        <td>{% if person.person.gender == 1 %}
                            <i class="fas fa-female fa-2x text-dark" data-placement="bottom" title="Femme"></i>
                            {% elseif person.person.gender == 2 %}
                            <i class="fas fa-male fa-2x text-dark" data-placement="bottom" title="Homme"></i>
                            {% endif %} </td>
                        <td>{{ person.getRoleType }}{% if person.head %} (DP){% endif %}</td>
                        <td>{% if person.groupPeople %}{{ person.groupPeople.getFamilyTypologyType }}{% endif %}
                        </td>
                        <td>{% if person.groupPeople %}{{ person.groupPeople.nbPeople }}{% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="navigation">
            {{ knp_pagination_render(role_people) }}
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags("search") }}
{% endblock javascripts %}