{% block title %}Connexion{% endblock %}

{% block stylesheets %} {% endblock %}

{% block body %}

<div class="container">

    <section id="connection" class="row min-vh-80">

        <form action="{{ path("security_login") }}" method="post" class="form-signin m-auto text-center">

            {# {% if error %}
            <div id="msg-profil" class="alert alert-danger alert-dismissible mb-3 fade show" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }} <button type="button" class="close"
                    data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {% endif %} #}

            <h1 class="h3 mb-4 font-weight-normal">Merci de vous connecter</h1>
            <label for="_username" class="sr-only">Login</label>
            <input type="text" name="_username" id="username" class="form-control mb-2 shadow-sm" placeholder="Login"
                value="{{ last_username }}" required autofocus>
            <label for="_password" class="sr-only">Mot de passe</label>
            <div class="js-password-group">
                <input type="password" name="_password" id="password" class="form-control mb-3 shadow-sm js-password"
                    placeholder="Mot de passe" required>
                <span class="js-show-password fas fa-eye"></span>
            </div>
            <div class="checkbox mb-3">
                <label for="remember">
                    <input type="checkbox" name="remember" id="remember" value="true"> Se souvenir de moi
                </label>
            </div>
            <input type="submit" value="Se connecter" id="validation"
                class="btn btn-lg btn-primary btn-block mb-4 shadow">
            <a href="{{ path("security_registration") }}"
                class="btn btn-lg btn-primary btn-block mb-4 shadow">S'inscrire</a>
            <a href="" class="text-primary mb-4">Login ou mot de passe oubli√© ?</a>
